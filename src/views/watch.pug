extends base.pug

block content
  #videoContainer(data-id=video._id)
    video(src=video.fileUrl)
    #videoControls.videoControls
      .videoControls__play
        span#play.videoControls__playBtn
          i.fas.fa-play
        .videoControls__time
          span#currenTime 00:00
          span /
          span#totalTime 00:00
      input#timeline.videoControls__timeline(
        type="range",
        step="1",
        value="0",
        min="0"
      )
      .videoControls__volume
        input#volume(type="range", step="0.1", value=0.5, min="0", max="1")
        span#mute
          i.fas.fa-volume-up
      div
        span#fullScreen
          i.fas.fa-expand
  .video__data
    p.video__title= video.description
    small.video__owner Uploaded by
      a(href=`/users/${video.owner._id}`)= video.owner.name
    small.video__createdAt= new Date(video.createdAt).toLocaleDateString("ko-kr", { weekday: "long", year: "numeric", month: "long", day: "numeric" })
    hr
    if String(video.owner._id) === String(loggedInUser._id)
      a(href=`${video.id}/edit`) Edit Video &rarr;
      br
      a(href=`${video.id}/delete`) Delete Video &rarr;
  if loggedIn
    .video__add-comments
      form#commentForm.video__comment-form
        textarea#commentBox(
          row=1
          placeholder="Comment"
        )
        button Add Comment
  .video__comments
    ul
      each comment in video.comments.reverse()
        li.video__comment(data-id=comment.id) 
          i.fas.fa-comment
          span  #{ comment.text }
          if String(comment.owner._id) === String(loggedInUser._id)
            span.del__btn ‚ùå
          else 
            span=""

block scripts
  script(src="/static/js/videoPlayer.js") 
  if loggedIn
    script(src="/static/js/commentSection.js") 
